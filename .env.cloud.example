# FractalTrader Cloud Deployment Configuration
# Copy this file to .env and fill in your values
#
# WARNING: NEVER commit .env to git!

# ============================================================
# TRADING CONFIGURATION
# ============================================================

# Trading strategy: liquidity_sweep, fvg_fill, bos_orderblock
STRATEGY=liquidity_sweep

# Network: testnet or mainnet (ALWAYS test on testnet first!)
NETWORK=testnet

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================================
# EXCHANGE API CREDENTIALS (for live trading)
# ============================================================

# Binance (if using Binance)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Hyperliquid (testnet/mainnet)
# Get testnet key from: https://app.hyperliquid-testnet.xyz
# CRITICAL: Keep this private! Anyone with this can trade your account!
HYPERLIQUID_PRIVATE_KEY=0x1234567890abcdef...

# ============================================================
# TELEGRAM NOTIFICATIONS (optional but recommended)
# ============================================================

# Create bot: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Get chat ID: https://t.me/userinfobot
TELEGRAM_CHAT_ID=123456789

# ============================================================
# RISK MANAGEMENT PARAMETERS
# ============================================================

# Base risk per trade (2% = 0.02)
BASE_RISK_PERCENT=0.02

# Maximum position size (5% = 0.05)
MAX_POSITION_PERCENT=0.05

# Minimum confidence score to enter trade (0-100)
MIN_CONFIDENCE=40

# ============================================================
# ADVANCED (usually don't need to change)
# ============================================================

# Docker resource limits
DOCKER_CPU_LIMIT=1.0
DOCKER_MEMORY_LIMIT=1G
